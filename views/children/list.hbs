<h2>Lista dzieci</h2>
<ul>
    {{#each childrenList}}
        <li>
            <label>
                {{this.name}}
                <select>
                    <option value="">Brak</option>
                    {{#each ../giftsList}}
                        <option value="{{this.id}}" {{#if (equals this.id ../giftId)}}"selected"{{/if}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </label>
            <button>Zapisz</button>
        </li>
    {{/each}}
</ul>

